<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form action="/edit/{{publication._id}}" method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="title" value="{{publication.title}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{publication.image}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{publication.price}}">
            <label>Description:</label>
            <textarea name="description"
                id="description">{{publication.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod">
                {{#if crypto-wallet}}
                <option value="crypto-wallet" selected>Crypto Wallet</option>
                {{else}}
                <option value="crypto-wallet" selected>Crypto Wallet</option>
                {{/if}}
                {{#if credit-card}}
                <option value="credit-card" selected>Credit Card</option>
                {{else}}
                <option value="credit-card">Credit Card</option>
                {{/if}}
                {{#if debit-card}}
                <option value="debit-card" selected>Debit Card</option>
                {{else}}
                <option value="debit-card">Debit Card</option>
                {{/if}}
                {{#if paypal}}
                <option value="paypal" selected>PayPal</option>
                {{else}}
                <option value="paypal">PayPal</option>
                {{/if}}
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>