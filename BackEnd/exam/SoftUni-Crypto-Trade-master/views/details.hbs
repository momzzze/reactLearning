<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{publication.image}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{publication.title}}</h1>
            <h3 id="payment">Payment method: {{publication.paymentMethod}}</h3>
            <p id="price"><span>Price: ${{publication.price}}</span></p>
            <p id="description">{{publication.description}}</p>
        </div>
        {{#if user}}
        <div class="product-btn">
            <!--Only for registered user and author of the publication -->
            {{#if isAuthor}}
            <div class="author">
                <a href="/edit/{{publication._id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{publication._id}}" class="btn-delete">Delete</a>
            </div>
            {{else}}
            <!-- Logged in user who has not yet buy this crypto-->
                {{#unless hasBought}}
                <a href="/buy/{{publication._id}}" class="btn-buy">Buy</a>
                {{else}}
                <!-- Logged in user who has already buy this crypto-->
                <p class="buy-message">You already bought these crypto coins.</p>
                {{/unless}}
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>